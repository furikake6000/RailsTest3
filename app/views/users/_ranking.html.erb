<h3>Ranking</h3>

<% @ranking = User.limit(10) %>
<% @ranking.each do |ranker| %>

<% rankeraccount = @client.user(ranker.twid.to_i) %>

<div class="media">
  <% icon_path = rankeraccount.profile_image_url.to_s.sub(/(.*)_normal/){$1} %>
  <%= image_tag(icon_path, size: "64x64" , alt: rankeraccount.name, class: "mr-3 rounded-circle") %>
  <div class="media-body">
    <h5 class="mt-0"><%= link_to rankeraccount.name, "users/#{rankeraccount.screen_name}" %></h5>
    <p>Score: <%= ranker.score %></p>
  </div>
</div>

<% end %>
