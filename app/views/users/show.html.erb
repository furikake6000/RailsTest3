<div class="row">
  <div class="col-md-8">
    <div class="media mb-3">
      <% icon_path = @user_tw_account.profile_image_url.to_s.sub(/(.*)_normal/){$1} %>
      <%= link_to image_tag(icon_path, size: "128x128" , alt: @user_tw_account.name, class: "mr-3 rounded-circle"), @user_tw_account.uri.to_s, target:"_new" %>
      <div class="media-body">
        <h2 class="mt-0"><%= @user_tw_account.name %></h2>
        <h4 class="mt-0"><%= link_to "Twitterページを見る", @user_tw_account.url.to_s, target:"_new" %></h2>
        <p>Score: <%= @user.score %></p>
      </div>
    </div>

    <% if @user != current_user %>
    <div class="card text-center border-danger mb-3">
      <div class="card-header">
        <h3 class="card-title text-danger">摘発フォーム</h3>
      </div>
      <div class="card-body">
        <p class="card-text text-danger">当該人物は、次の暗号を使用したスパイであると思われます。</p>
        <%= form_tag({controller: "users", action: "report"}, remote: true, class: "form-group") do %>
          <%= hidden_field_tag :ajax_tag, "report" %>
          <%= hidden_field_tag :reported_id, @user.id %>
          <%= text_field_tag :word, "", placeholder: "「暗号」を入力してください", class:"form-control form-control-lg" %>
          <%= submit_tag("詳細な照合を依頼します。", class:"btn btn-danger text-light mt-3") %>
        <% end %>
        <div id="report-result"></div>
      </div>
    </div>
    <% end %>

    <div class="card bg-light mb-3">
      <div class="card-body">
        <h3 class="card-title">Mission</h3>
        <%= render partial: 'words/words' %>
      </div>
    </div>
  </div>
  <div class="col-md-4">
    <%= render partial: 'users/ranking' %>
    <%= render partial: 'users/friends' %>
  </div>
</div>
