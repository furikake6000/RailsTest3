<div class="row">
  <div class="col-md-8">
    <div class="media mb-3">
      <% icon_path = get_twpic_uri(@user_tw_account) %>
      <%= link_to image_tag(icon_path, size: "128x128" , alt: @user_tw_account.name, class: "mr-3 rounded-circle"), @user_tw_account.uri.to_s, target:"_new" %>
      <div class="media-body">
        <h2 class="mt-0"><%= @user_tw_account.name %></h2>
        <h4 class="mt-0"><%= link_to "Twitterページを見る", @user_tw_account.url.to_s, target:"_new" %></h2>
        <p>Score: <%= @user.get_score(nil) %></p>
      </div>
    </div>

    <% if @user != current_user %>
    <%= render partial: 'users/report_form' %>
    <% end %>

    <div class="card bg-light mb-3">
      <div class="card-body">
        <h3 class="card-title"><%= @user_tw_account.name %>の本日のミッション</h3>
        <%= render partial: 'words/words' %>
      </div>
    </div>

    <div class="card bg-light mb-3">
      <div class="card-body">
        <h3 class="card-title"><%= @user_tw_account.name %>の昨日のミッション</h3>
        <%= render partial: 'words/deadwords' %>
      </div>
    </div>
  </div>
  <div class="col-md-4">
    <%= render partial: 'users/friends' %>
    <%= render partial: 'users/ranking' %>
  </div>
</div>
