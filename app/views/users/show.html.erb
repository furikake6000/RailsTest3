<div class="row">
  <div class="col-md-8">
    <div class="row">
      <div class="media mb-3">
        <% icon_path = @user_tw_account.profile_image_url.to_s.sub(/(.*)_normal/){$1} %>
        <%= image_tag(icon_path, size: "128x128" , alt: @user_tw_account.name, class: "mr-3 rounded-circle") %>
        <div class="media-body">
          <h2 class="mt-0"><%= @user_tw_account.name %></h2>
          <p>Score: <%= @user.score %></p>
        </div>
      </div>

      <div class="card bg-light mb-3">
        <div class="card-body">
          <h3 class="card-title">Mission</h3>
          <%= render partial: 'words/words' %>
        </div>
      </div>
    </div>
  </div>
  <div class="col-md-4">
    <%= render partial: 'users/ranking' %>
  </div>
</div>
