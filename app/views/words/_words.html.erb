<table class="table wordlist">
  <thead>
    <tr>
      <th scope="col">暗号</th>
      <th scope="col">摘発</th>
      <th scope="col">投稿数</th>
      <th scope="col">獲得スコア</th>
    </tr>
  </thead>
  <% sum = 0 %>
  <% @words.each do |word| %>
    <% if word.alive? %>
      <%= render word %>
      <% sum += word.get_score(@user, nil) %>
    <% end %>
  <% end %>
  <tr>
    <th scope="row">本日獲得スコア</th>
    <td></td>
    <td></td>
    <td><%= sum %></td>
  </tr>
  <tr>
    <th scope="row">合計スコア</th>
    <td></td>
    <td></td>
    <td><%= @user.get_score(nil) %></td>
  </tr>
</table>
